<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"    >
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="432px"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400px"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_point_group"
            android:orientation="horizontal"
            >
        </LinearLayout>

        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:id="@+id/viewRedPoint"
            android:background="@drawable/shape_point_red"/>
    </RelativeLayout>
    </RelativeLayout>



    <LinearLayout
    android:id="@+id/mengbanLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="horizontal"
    android:visibility="invisible">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/jishibenBtn"
            android:layout_width="150dp"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            android:layout_height="260dp"
            android:text="记录我的心情"/>
        <Button
            android:id="@+id/zhaopianBtn"
            android:layout_width="150dp"
            android:visibility="invisible"
            android:layout_gravity="center_vertical"
            android:layout_height="260dp"
            android:text="记录我们的照片"/>
    </LinearLayout>
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            app:backgroundTint="#30469b"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:fabSize="normal"
            app:layout_anchorGravity="bottom|right"
            app:pressedTranslationZ="12dp"
            app:rippleColor="#a6a6a6" />


</android.support.design.widget.CoordinatorLayout>